{
	"manifest_version": 3,
	"name": "Disable WebSockets",
	"description": "This extension disables WebSockets comprehensively",
	"version": "1.0",
	"author": "kubosuke",
	"permissions": [
		"activeTab",
		"scripting",
		"declarativeNetRequest"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"script.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "websocket_blocking_rules",
				"enabled": true,
				"path": "rules.json"
			}
		]
	}
}